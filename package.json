{
	"name": "svelte-splitpanes",
	"version": "0.7.10",
	"description": "A full featured resizable pane layout splitter, ported from vue-splitpanes",
	"author": {
		"name": "Olivier Refalo",
		"url": "https://github.com/orefalo"
	},
	"keywords": [
		"svelte",
		"component",
		"layout",
		"split",
		"splitter",
		"pane",
		"panel",
		"resize",
		"resizable"
	],
	"bugs": "https://github.com/orefalo/svelte-splitpanes/issues",
	"homepage": "https://orefalo.github.io/svelte-splitpanes/",
	"repository": {
		"type": "git",
		"url": "https://github.com/orefalo/svelte-splitpanes"
	},
	"license": "MIT",
	"scripts": {
		"dev": "cross-env DEV=1 vite dev --port 3000",
		"build": "vite build",
		"package": "svelte-package",
		"preview": "vite preview --port 3000",
		"prepare": "husky install",
		"static-serv": "serve -l 3000 --no-clipboard",
		"test": "playwright test",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --cache --plugin-search-dir=. src/ && eslint --cache --ignore-path .gitignore src/",
		"format": "prettier --ignore-path .gitignore --write --cache --plugin-search-dir=. src/",
		"commit-preverify": "npx lint-staged && npm run check",
		"commit": "npm run commit-preverify && cross-env NO_VERIFY=1 node ./node_modules/cz-customizable/standalone.js",
		"fetch-and-publish": "node scripts/fetch-and-publish.js"
	},
	"devDependencies": {
		"@commitlint/cli": "17.3.0",
		"@commitlint/config-conventional": "17.3.0",
		"@sveltejs/adapter-static": "1.0.0",
		"@sveltejs/kit": "1.0.1",
		"@sveltejs/package": "1.0.1",
		"@typescript-eslint/eslint-plugin": "5.47.1",
		"@typescript-eslint/parser": "5.47.1",
		"cross-env": "7.0.3",
		"cz-customizable": "7.0.0",
		"eslint": "8.31.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-svelte3": "4.0.0",
		"highlight.js": "11.7.0",
		"husky": "8.0.2",
		"lint-staged": "13.1.0",
		"prettier": "2.8.1",
		"prettier-plugin-svelte": "2.9.0",
		"sass": "1.57.1",
		"svelte": "3.55.0",
		"svelte-check": "3.0.1",
		"svelte-highlight": "7.1.2",
		"svelte-preprocess": "5.0.0",
		"svelte-range-slider-pips": "2.1.1",
		"svelte2tsx": "0.6.0",
		"tslib": "2.4.1",
		"typescript": "4.9.4",
		"vite": "4.0.3"
	},
	"type": "module",
	"optionalDependencies": {
		"@playwright/test": "1.29.1",
		"serve": "14.1.2"
	},
	"config": {
		"cz-customizable": {
			"config": ".cz-config.cjs"
		}
	}
}
